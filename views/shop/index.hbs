<div class="row">
   <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
      <div id="success" class="alert alert-success {{# if noMessage}}hidden{{/if}}">
            {{successMsg}}
      </div>
   </div>
</div>

{{# each products }}
   <div class='row'>
      {{# each this}}
      <div class = "col-sm-6 col-md-4">
      <div class = "thumbnail">
         <img src = "{{this.imagePath}}" class='image-responsive' alt = "Generic placeholder thumbnail">
      </div>
      
      <div class = "caption">
         <h3>{{this.title}}</h3>
         <p class='description'>{{this.description}}</p>
         
         <p>
             <div class='clearfix'>
                 
            <div class='pull-left'>${{this.price}}</div>
            <a href = "/add-to-cart/{{this._id}}" class = "btn btn-success pull-right" role = "button">
               Add to Cart
            </a> 
            
            </div>
         </p>
      </div>
      
   </div>
      {{/each}}
   </div>
{{/each}}
