<div class="row">
    <div class="col-md-8 col-md-offset-2"></div>
    <h1>User Profile</h1>
    <hr>
    <h2>My Orders</h2>
    {{# each orders }}
    <div class="card">
        <div class="card-body">
            <div class="card-text">
                <ul class="list-group">
                    {{# each this.items }}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{this.item.title}} | {{this.qty}} 
                        <span class="badge badge-primary badge-pill">${{this.price}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="card-footer">Total: ${{this.cart.totalPrice}}</div>
        </div>
    </div>
    {{/each}}
</div>